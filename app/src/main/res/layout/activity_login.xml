<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    tools:context=".account.Login" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        android:textSize="35dp"
        android:textColor="@color/theme_tele"/>

    <com.google.android.material.textfield.TextInputLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/etEmailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:startIconDrawable="@drawable/icons8_user_48"
        app:startIconTint="@color/theme_tele"
        android:hint="Email"
        android:textColorHint="@color/theme_tele"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:padding="15dp"
            android:text="duong@gmail.com"
            android:textColor="@color/theme_tele"
            android:textStyle="bold"
            android:textSize="16sp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/etPasswordLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/theme_tele"
        android:layout_marginBottom="7dp"
        app:startIconDrawable="@drawable/icons8_password_481"
        app:startIconTint="@color/theme_tele"
        android:hint="Password"
        android:textColorHint="@color/theme_tele"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/theme_tele"
            android:text="123123"
            android:textStyle="bold"
            android:textSize="16sp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:layout_gravity="right"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/color_main"
        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/theme_tele"
        android:padding="10dp"
        android:text="LOGIN"
        android:textSize="15sp"
        android:background="@drawable/button_custom"
        android:textColor="#D0EAE7" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản? "
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center"
            android:clickable="true"/>
        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@color/theme_tele"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:clickable="true"/>
    </LinearLayout>

</LinearLayout>